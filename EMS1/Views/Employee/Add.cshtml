@model Employee //always we have to start with model

<form method="post">

    <div class="border p-3 mt-4">
        <!-- padding 3 margin top 4-->
        <div class="row pb-2">
            <!-- -->
            <h2 class="text-primary">Add Employee</h2>
            <hr />
        </div>
    </div>
    <div class="mb-3">
        <!--margin bottom 3-->
        <label asp-for="Name"> </label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <!--margin bottom 3-->
        <label asp-for="Department"> </label>
        <input type="text" asp-for="Department" class="form-control" />
    </div>
    <div class="row">
        <div class="col-6">
            <!-- boostrap class having 12 cols / into 6-6 cols-->
            <button type="submit" asp-action="Add" class="btn btn-primary ">ADD</button>  <!-- add form-control class to give it full width -->

        </div>
        <div class="col-6">
            <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-secondary border">Back to List</a> <!-- btn-outline-secondary  rather thn secondary & add little bit of border too-->

        </div>
    </div>
</form>