@model Employee 

<form method="post">

    <div class="border p-3 mt-4">
       
        <div class="row pb-2">
            <!-- -->
            <h2 class="text-primary">Edit Employee</h2>
            <hr />
        </div>
    </div>
    <div class="mb-3">
        <!--margin bottom 3-->
        <label> Employee ID </label>
        <input type="text" value="@Model.ID" asp-for="ID" class="form-control" />
    </div>
    <div class="mb-3">
        <!--margin bottom 3-->
        <label>Edit Name</label>
        <input type="text" value="@Model.Name" asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <!--margin bottom 3-->
        <label>Edit Department</label>
        <input type="text" value="@Model.Department" asp-for="Department" class="form-control" />
    </div>
    <div class="row">
        <div class="col-6">
            <!-- boostrap class having 12 cols / into 6-6 cols-->
            <button type="submit" asp-action="Update" class="btn btn-primary ">Update</button>  <!-- add form-control class to give it full width -->

        </div>
        <div class="col-6">
            <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-secondary border">Back to List</a> <!-- btn-outline-secondary  rather thn secondary & add little bit of border too-->

        </div>
    </div>
</form>